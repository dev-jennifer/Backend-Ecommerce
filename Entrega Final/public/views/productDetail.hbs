<div class="container">
  {{#if error}}
    {{mensaje}}
    <a href="/productos" class="btn btn-dark btn-block my-2">
      Volver
    </a>
  {{else}}
    <div class="row">
      <!-- card left -->
      <div class="col-md-5">
        {{#if producto.foto}}
          <img src="{{producto.foto}}" alt={{producto.nombre}} />
        {{else}}
          <img
            src="http://www.carsaludable.com.ar/wp-content/uploads/2014/03/default-placeholder.png"
            alt="Product"
            class="img-responsive"
          />
        {{/if}}
      </div>
      <div class="col-md-7">
        <!-- card right -->
        <div class="product-content">
          <h2 class="product-title">
            {{producto.nombre}}
          </h2>

          <div class="product-price">
            <p class="new-price">
              Precio:
              <span>
                ${{producto.precio}}
              </span>
            </p>
          </div>

          <div class="product-detail">
            <p>
              {{producto.descripcion}}
            </p>
            <ul>
              <li>
                Stock:
                <span>
                  {{producto.stock}}
                </span>
              </li>
              {{#if producto.categoria}}
                <li>
                  Categoria:

                  <span>
                    {{producto.categoria}}
                  </span>
                </li>
              {{/if}}
            </ul>
          </div>

          <div class="purchase-info">
            {{! <input type="number" min="0" value="1"> }}
            <button
              type="button"
              onclick="agregar('{{producto.id}}')"
              class="btn"
            >
              <i class="fas fa-shopping-cart">
                Add to Cart
              </i>
            </button>

            <button type="button" class="btn" onclick="edit('{{producto.id}}')">
              Editar
            </button>
          </div>
        </div>
      </div>
    </div>
  {{/if}}
</div>