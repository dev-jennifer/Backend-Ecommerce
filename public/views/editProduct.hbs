<div class="container">
  <h2>
    Editar Producto
  </h2>

  <form id="editar" data-id={{id}}>
    <div class="row">
      <div class="col-md-8">
        <div class="form-group">
          <label for="nombre">
            Nombre
          </label>
          <input
            id="nombre"
            class="form-control"
            type="text"
            name="nombre"
            value="{{producto.nombre}}"
          />
        </div>
        <div class="form-group">
          <label for="foto">
            Foto URL
          </label>
          <input
            id="foto"
            class="form-control"
            type="text"
            name="foto"
            value="{{producto.foto}}"
          />
        </div>
        <div class="form-group">
          <label for="descripcion">
            Descripci√≥n
          </label>
          <textarea
            rows="10"
            id="descripcion"
            class="form-control"
            name="descripcion"
          >
            {{producto.descripcion}}
          </textarea>
        </div>
      </div>

      <div class="col-md-4">
        <div class="form-group">
          <label for="categoria">
            Categoria
          </label>
          <select
            id="categoria"
            name="categoria"
            data-selected={{producto.categoria}}
          >
            <option value="fruta">
              Fruta
            </option>
            <option value="verdura">
              Verdura
            </option>
          </select>
        </div>
        <div class="form-group">
          <label for="precio">
            Precio
          </label>
          <input
            id="precio"
            class="form-control"
            value="{{producto.precio}}"
            type="number"
            name="precio"
          />
        </div>
        <div class="form-group">
          <label for="stock">
            Stock
          </label>
          <input
            id="stock"
            class="form-control"
            type="number"
            value="{{producto.stock}}"
            name="stock"
          />
        </div>
      </div>
    </div>

   
    <a class="btn btn-primary" onclick="deleting('{{producto.id}}')">
      Eliminar
    </a>
    <a class="btn btn-primary" onclick="actualizar('{{producto.id}}')">
      Actualizar
    </a>
  </form>
</div>