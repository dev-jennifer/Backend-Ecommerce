 <section class="user-profile">
  <div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Perfil de usuario</h1></div>
    <div class="row">
      <div class="col-sm-3">
        <div class="text-center">

  
          {{#if user.picture.data.url }}
             <img alt="profile" class="avatar img-circle img-thumbnail" src="{{user.picture.data.url}}"/>
          {{else}}
               {{#if user.picture}}
                   <img alt="profile" class="avatar img-circle img-thumbnail" src="{{user.picture}}"/> 
                {{else}}
               {{#if usuario.avatar}}
             <img  alt="profile"  class="avatar img-circle img-thumbnail"  src="./uploads/{{usuario.avatar}}"/>
              {{/if}}
          {{/if}}{{/if}}

 
        </div>
      </div>
      <!--/col-3-->
      <div class="col-sm-9">
 
        <div class="tab-content">
         {{#if usuario}}
 
          <form class="form"  id="registrationForm" data-id={{usuario.id}}>
            <div class="form-group">
           
              <div class="col-sm-12">
                <label for="first_name"><h4>First name</h4></label>
                
                <input
                  type="text"
                  class="form-control"
                  name="first_name"
                  id="first_name"
                 value="{{usuario.name}}"
               />
              </div>
 
              <div class="col-sm-12">
                <label for="last_name"><h4>Last name</h4></label>
                <input
                  type="text"
                  class="form-control"
                  name="last_name"
                  id="last_name"
                  value="{{usuario.lastName}}"
                />
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <label for="phone"><h4>Age</h4></label>
                <input
                  type="text"
                  class="form-control"
                  name="number"
                  id="age"
                  value=  "{{usuario.age}}"
                />
              </div>
 
              <div class="col-sm-12">
                <label for="phone"><h4>Phone</h4></label>
                  <input id="phone" type="tel" name="phone" value="{{usuario.phone}}" />
                 
              </div>
  
              <div class="col-sm-12">
                <label for="email"><h4>Email</h4></label>
                <p>{{usuario.email}}</p>
                  
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <label for="email"><h4>Address</h4></label>
                <input
                  type="email"
                  class="form-control"
                  id="location"
                  value="{{usuario.address}}" />
              </div>

         
            <a class="btn btn-primary" onclick="actualizarProfile('{{usuario.email}}')">
              Actualizar
            </a>

          </form>

          {{/if}}
        </div>

      </div>
    </div>
  </div>
</div>  
</section>

 