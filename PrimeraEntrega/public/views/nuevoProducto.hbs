{{> headers title="Productos"}}

<div className="container mt-4">
  <h2 style="color: blue">Ingrese Producto</h2>

  <form method="POST" action="/api/productos">
    <div class="form-group">
      <input
        id="nombreProducto"
        placeholder="Nombre"
        className="form-control"
        type="text"
        name="nombreProducto"
      />
    </div>
    <div class="form-group">
      <textarea
        id="descripcion"
        className="form-control"
        name="descripcion"
        placeholder="DescripciÃ³n"
      ></textarea>
    </div>
    <div class="form-group">
      <input
        id="fotoProducto"
        className="form-control"
        type="text"
        name="fotoProducto"
        placeholder="Foto URL"
      />
    </div>
    <div class="form-group">
      <input
        id="codigo"
        className="form-control"
        type="text"
        name="codigo"
        placeholder="Codigo"
      />

      <input
        id="precioProducto"
        className="form-control"
        type="number"
        name="precioProducto"
        placeholder="Precio"
      />

      <input
        id="stock"
        className="form-control"
        type="number"
        name="stock"
        placeholder="Stock"
      />
    </div>

    <input type="submit" class="btn btn-dark btn-block" value="Agregar" />
  </form>

</div>

{{> footer year="2022"}}